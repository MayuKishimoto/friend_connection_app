<h1>Feeds</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= image_tag feed.image.to_s %></td>
        <td><%= feed.content %></td>
        <td><%= feed.user.name %></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Show', feed %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Edit', edit_feed_path(feed) %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-light"><%= link_to 'New Feed', new_feed_path %></button>
